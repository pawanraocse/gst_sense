# Budget Environment - Example Variables
# =======================================
# Copy to terraform.tfvars and customize.
# Common settings (project_name, aws_region) are loaded from:
#   ../../common.auto.tfvars
#
# Deploy command:
#   terraform apply -var-file=../../common.auto.tfvars
# =======================================

# Environment identifier
environment = "budget"

# Project name override (optional - adds suffix for resource isolation)
# If not set, uses project_name from common.auto.tfvars
project_name = "cloud-infra-budget"

# VPC
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# EC2 (t3.small for 2GB RAM - required for all Docker services)
ec2_instance_type       = "t3.small"
allowed_ssh_cidr_blocks = ["0.0.0.0/0"]  # Restrict to your IP in production
ssh_public_key          = ""  # Required: Paste your SSH public key

# Amplify
frontend_repository_url = "https://github.com/your-org/your-repo"  # Your fork
github_access_token     = ""  # Use TF_VAR_github_access_token instead
frontend_branch         = "main"
frontend_app_root       = "frontend"
